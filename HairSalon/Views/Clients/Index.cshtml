@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if(Model.Count == 0)
{   
  <h4>No clients added yet!</h4>
  @Html.ActionLink("Add a client", "Create", "Clients")
}
else
{
  <h1>List of all clients</h1>
  <ul>
    @foreach (Client client in Model)
    {
      <li><strong>@client.Name</strong> | Stylist: @client.Stylist.Name</li>
    }
  </ul>
}